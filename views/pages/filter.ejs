<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <title>Home Page</title>
        <link rel='icon' href='../resources/img/favicon.ico' type='image/x-icon'/>
        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    </head>

    <body>
        <form class="form" action="filter_result">
            <div class="form-group">
                <label class="font-weight-bold" for="search_bar">Search</label>
                <input class="form-control" type="text" id="search_bar" name="search_term" placeholder="Enter Search Term">
            </div>
            <label>Filter</label>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="price1" value="True">$
                        </label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="price2" value="True">$$
                        </label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="price3" value="True">$$$
                        </label>
                    </div>
                </div>
            </div>
            <input type="submit" value="Submit" class="btn btn-success">
        </form>
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Hours</th>
                <th>Price</th>
                <th>Rating</th>
            </tr>
            <%
            if (results) {
                var table = '';
                results.forEach(function(item){
                    table += '<tr><td>' + item.restaurant_name + '</td><td>' + item.restaurant_hours + '</td><td>' + item.restaurant_price + '</td><td>' + item.restaurant_rating + '</td></tr>';
                }); %>
            <%-table%>
            <%}%>
        </table>
    </body>
</html>
